<% if @error_messages %>
    <div>
        <strong>There appears to be a problem with your user info</strong>
        <ul>
            <% @error_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
<form method="post" action="/login">
    <div>
        <label> Username or Email:</label>
        <input type="text" name="username_or_email" value="<%= @user && @user.username_or_email %>">
    </div>
    <div>
        <label>Password:</label>
        <input type="text" name="password" value-"<% @user && @user.password %>">
    </div>
    <div>
        <input type="submit" value="Submit">
    </div>
</form>
